# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/achadinhos_gabi?schema=public"

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
JWT_SECRET="your-jwt-secret-key"
CORS_ORIGIN="http://localhost:3000"

# WhatsApp Configuration
WHATSAPP_SESSION_PATH="./sessions"

# Affiliate Programs
# Mercado Livre - Use seu tracking_id UUID (formato: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx)
MERCADOLIVRE_AFFILIATE_ID="a9aee640-eb7d-440e-ab24-e228a34d70bd"
SHOPEE_AFFILIATE_ID="your-shopee-affiliate-id"
AMAZON_ASSOCIATE_TAG="your-amazon-tag"
ALIEXPRESS_AFFILIATE_ID="your-aliexpress-id"

# Scraper Configuration
MAX_CONCURRENT_SCRAPERS=2
REQUEST_DELAY_MIN=2000
REQUEST_DELAY_MAX=5000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW="1 minute"

# Instagram Configuration
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"
INSTAGRAM_BUSINESS_ACCOUNT_ID="your-instagram-business-account-id"
INSTAGRAM_ACCESS_TOKEN="your-long-lived-access-token"
INSTAGRAM_CALLBACK_URL="http://localhost:3001/api/auth/instagram/callback"

# TikTok Configuration
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_ACCESS_TOKEN="your-tiktok-access-token"
TIKTOK_OPEN_ID="your-tiktok-open-id"
TIKTOK_CALLBACK_URL="http://localhost:3001/api/auth/tiktok/callback"

# OpenAI Configuration (for AI content generation)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_TEMPERATURE=0.7

# Telegram Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHANNEL_ID="@your_channel_name"
TELEGRAM_ADMIN_CHAT_ID="your-admin-chat-id"

# Email Marketing (SendGrid/Resend)
EMAIL_PROVIDER="sendgrid" # or "resend"
SENDGRID_API_KEY="your-sendgrid-api-key"
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@achadinhosdagabi.com.br"
EMAIL_FROM_NAME="Achadinhos da Gabi"

# Canvas/Design API (Canva or similar)
CANVA_API_KEY="your-canva-api-key"
CANVA_BRAND_KIT_ID="your-brand-kit-id"

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@achadinhosdagabi.com.br"

# Social Media Analytics
FACEBOOK_GRAPH_API_VERSION="v18.0"
INSTAGRAM_INSIGHTS_ENABLED=true
TIKTOK_ANALYTICS_ENABLED=true

# SEO & Site Configuration
SITE_URL="https://www.achadinhosdagabi.com.br"
ADMIN_URL="https://admin.achadinhosdagabi.com.br"
SITEMAP_BASE_URL="https://www.achadinhosdagabi.com.br"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# CDN & Storage
CDN_URL="https://cdn.achadinhosdagabi.com.br"
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=104857600 # 100MB in bytes

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
SESSION_SECRET="your-session-secret-key"

# Feature Flags
ENABLE_INSTAGRAM_STORIES=true
ENABLE_INSTAGRAM_REELS=true
ENABLE_TIKTOK_VIDEOS=true
ENABLE_TELEGRAM_BOT=true
ENABLE_EMAIL_MARKETING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_PUBLIC_SITE=true